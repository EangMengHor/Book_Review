<%- include("partials/header.ejs") %>

<div>
    <main>      
        <div class="bg-dark text-secondary px-4 py-5 text-center">
            <div class="py-5">
                <h1 class="display-5 fw-bold text-white">Meng Hor's Library</h1>
                <div class="col-lg-6 mx-auto">
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <form class="form-inline" action="/add" method="post">
                            <div class="form-group mx-sm-3 mb-2 d-flex">
                                <input type="text" name="newBook" placeholder="New Item" autocomplete="off" autofocus="true" class="btn btn-outline-info text-white form-control p-2 mx-2"/>
                                <button type="submit" name="list" value="" class="btn btn-outline-info btn-md px-4 me-sm-3">+</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      
        <div class="b-example-divider mb-0"></div>
    </main>

    <% if(locals.books){ %>
        <div class="album py-5">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-3">
                    <% books.forEach(element => { %>       
                        <div class="col">
                            <div class="card shadow-sm h-100">
                                <img src="https://covers.openlibrary.org/b/id/<%- element.cover_i %>-L.jpg" class="card-img-top" alt="<%- element.title %> cover">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-white" width="100%" height="95%"><%- element.title %></h5>
                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                            <form action="/delete" method="post">
                                                <button class="btn btn-sm btn-outline-secondary" name="deleteID" value="<%-element.id%>">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>            
                    <% }); %>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include("partials/footer.ejs") %>